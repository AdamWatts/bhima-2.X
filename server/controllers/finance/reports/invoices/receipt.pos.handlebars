<p><b>{{recipient.display_name}}</b></p>
<p>{{recipient.debtor_group_name}}</p>
<p>{{reference}} ON {{date date}} BY <span style="text-transform : uppercase;">{{user.display_name}}</span></p>
<p>----------------------------------------------------------------</p>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
    <tr>
      <td>{{quantity}} x {{this.text}}</td>
    </tr>
    <tr>
      <td style="text-align : right;">{{currency (multiply this.transaction_price quantity) ../metadata.enterprise.currency_id}}</td>
    </td>
    {{/each}}
  </tbody>
</table>
